{
  "name": "tai64",
  "version": "0.0.0",
  "description": "Typescript implementation of TAI64 timestamps for Node.js and the browser",
  "keywords": [
    "tai",
    "tai64",
    "date",
    "time",
    "timestamp",
    "typescript"
  ],
  "author": "hl2",
  "license": "MIT",
  "homepage": "https://github.com/hl2/tai64#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hl2/tai64.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib .nyc_output coverage",
    "lint:src": "tslint -p tsconfig.json",
    "lint:test": "tslint -p test/tsconfig.json",
    "format": "prettier --write '{src,test}/**/*.{ts,json}' '*.{md,json}'",
    "build": "tsc",
    "test": "NODE_ENV=test nyc mocha -r ts-node/register 'test/**/*.test.ts'",
    "release": "npm version",
    "prebuild": "npm-run-all clean lint:src",
    "pretest": "npm-run-all build lint:test",
    "prerelease": "npm-run-all test"
  },
  "dependencies": {
    "@types/long": "4.0.0",
    "@types/node": "10.12.10",
    "long": "4.0.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "chai": "4.2.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.5",
    "nyc": "13.1.0",
    "prettier": "1.15.2",
    "rimraf": "2.6.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
