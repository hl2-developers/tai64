  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.5",
    "chai": "4.2.0",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.15.2",
    "rimraf": "2.6.2",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6"
